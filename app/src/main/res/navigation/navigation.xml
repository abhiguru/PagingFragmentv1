<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/filterFragment">

    <fragment
        android:id="@+id/filterFragment"
        android:name="in.tutorial.pagingfragmentv1.view.fragment.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_pagingListFragment"
            app:destination="@id/pagingListFragment" />
    </fragment>
    <fragment
        android:id="@+id/pagingListFragment"
        android:name="in.tutorial.pagingfragmentv1.view.fragment.PagingListFragment"
        android:label="fragment_paging_list"
        tools:layout="@layout/fragment_paging_list" >
        <argument android:name="grNo"
            app:argType="string"
            android:defaultValue='""'/>
        <argument android:name="dateFrom"
            app:argType="string"
            android:defaultValue='""'/>
        <argument android:name="dateTo"
            app:argType="string"
            android:defaultValue='""'/>
        <action
            android:id="@+id/action_pagingListFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
</navigation>